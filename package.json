{
	"name": "mc-model-vision",
	"productName": "MC Model Vision",
	"version": "0.0.1",
	"main": "src/main/index.js",
	"description": "View Minecraft models easy as pie.",
	"license": "MIT",
	"repository": "railrunner166/mc-model-vision",
	"author": {
		"name": "Landon Gravat",
		"email": "railinator4903@gmail.com",
		"url": "raildev.tk"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist:linux": "electron-builder --linux",
		"dist:macos": "electron-builder --macos",
		"dist:windows": "electron-builder --windows",
		"release": "np"
	},
	"dependencies": {
		"custom-electron-titlebar": "^3.2.1",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.13.0"
	},
	"devDependencies": {
		"electron": "^7.1.1",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.railrunner166.mc-model-vision",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
